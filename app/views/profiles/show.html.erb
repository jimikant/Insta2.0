<br/>
<div class="container-fluid">
  <div class="row">
    
    <!-- My Profile Section -->
    <div class="col-md-4 d-flex flex-column justify-content-start align-items-center bg-white p-3 border" style="height: 70vh; margin-top: 55px;">
      <% if @profile.present? %>
        <h4>My Profile</h4>
        <% if @profile.avtar.attached? %>
          <%= image_tag @profile.avtar_variant, class: 'avtar' %>
        <% else %>
          <%= image_tag 'default_avtar.png', class: 'avtar' %>
        <% end %>
        <br/>
        <p><strong>First name:</strong> <%= @profile.first_name %></p>
        <p><strong>Last name:</strong> <%= @profile.last_name %></p>
        <p><strong>Phone:</strong> <%= @profile.phone %></p>
        <p><strong>Address:</strong> <%= @profile.address %></p>
        <br />
        <%= link_to 'Edit Profile', edit_profile_path, class: "btn btn-warning mb-2" %>
        <%= button_to 'Delete', destroy_profile_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure delete Profile?' }, class: "btn btn-danger w-100" %>
      <% else %>
        <div class="d-flex flex-column justify-content-center align-items-center" style="height: 100%; text-align: center;">
          <%= image_tag 'default_avtar.png', class: 'img-fluid mb-3', alt: 'Default Profile', style: 'max-width: 150px;' %>
          <h5 class="text-muted">No Profile Created Yet</h5>
          <p class="text-muted">It looks like you haven't set up your profile yet. Create your profile to start personalizing your experience.</p>
          <%= link_to "Create Profile", new_profile_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

<!-- My Posts Section -->
<div class="col-md-8 d-flex flex-column" style="height: 90vh; overflow-y: auto;">
  <div class="container">
    <% if @posts.any? %>
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="mb-0">My Posts</h4>
        <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
      </div>

      <div class="row justify-content-center">
        <div class="col-md-12">
          <% @posts.each do |post| %>
            <div class="card mt-3">
              <div class="card-body text-center">
                <a href="<%= post_path(post) %>" class="text-dark text-decoration-none">
                  <% if post.image.attached? %>
                    <%= image_tag url_for(post.image), class: "img-thumbnail custom-img-size mb-3" %>
                  <% end %>
                </a>
                <p class="card-title"><strong>Title:</strong> <%= post.title %></p>
                <% if post.tags.any? %>
                  <p class="card-title"><strong>Tags:</strong>
                  <% post.tags.each do |tag| %>
                    <span class="tag text-white bg-dark rounded p-1"><%= tag.name %></span>
                  <% end %>
                  </p>
                <% else %>
                  <p class="card-title text-muted"><strong>No Tags available</strong></p>
                <% end %>
                <!-- toggle button for liking/disliking -->
                <div class="post-container-toggle d-flex justify-content-center align-items-center">
                  <div class="count-toggle">
                    <span class="likes-count text-muted"><%= post.likes.count %></span>
                  </div>
                  <div class="toggle">
                    <% if post.likes.where(user: @user).exists? %>
                      <%= form_with(url: destroy_like_path(user_id: @user.id, id: post.likes.find_by(user: @user).id), method: :delete) do |form| %>
                        <%= form.radio_button :like, true, id: "like1", class: "d-none" %>
                        <%= form.label :like, class: "like-btn btn btn-outline-danger", id: "liked", for: "like1" do %>
                          <span class="like-text" id="like-text1">Liked</span>
                        <% end %>
                      <% end %>
                    <% else %>
                      <%= form_with(url: likes_path(user_id: @user.id, post_id: post.id), method: :post) do |form| %>
                        <%= form.radio_button :like, true, id: "like2", class: "d-none" %>
                        <%= form.label :like, class: "like-btn btn btn-outline-danger", id: "like", for: "like2" do %>
                          <span class="like-text" id="like-text2">Like</span>
                        <% end %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="d-flex flex-column justify-content-center align-items-center text-center border" style="height: 80vh;">
        <%= image_tag 'default_post.jpg', class: 'img-fluid mb-3', alt: 'No Posts', style: 'max-width: 200px;' %>
        <h5 class="text-muted">No Posts Yet</h5>
        <p class="text-muted">You haven't created any posts yet. Start sharing your thoughts and experiences!</p>
        <%= link_to "Create Your First Post", new_post_path, class: "btn btn-primary mt-3" %>
      </div>
    <% end %>
  </div>
</div>
    
  </div>
</div>
