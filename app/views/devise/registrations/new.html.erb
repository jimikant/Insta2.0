<br/>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center">Sign up</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="mb-3">
              <%= f.label :username, class: "form-label fw-bold" %>
              <%= f.text_field :username, class: "form-control", autofocus: true, autocomplete: "username" %>
              <% if @user.errors[:username].any? %>
                <div class="text-danger">
                  <%= @user.errors[:username].join(", ") %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label fw-bold" %>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
              <% if @user.errors[:email].any? %>
                <div class="text-danger">
                  <%= @user.errors[:email].join(", ") %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label fw-bold" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
              <% if @user.errors[:password].any? %>
                <div class="text-danger">
                  <%= @user.errors[:password].join(", ") %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label fw-bold" %>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
              <% if @user.errors[:password_confirmation].any? %>
                <div class="text-danger">
                  <%= @user.errors[:password_confirmation].join(", ") %>
                </div>
              <% end %>
            </div>

            <%= f.hidden_field :role, value: 'user' %>

            <div class="text-center">
              <%= f.submit "Sign up", class: "btn btn-primary w-100 fw-bold" %>
            </div>

          <% end %>

          <div class="mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
