<%= form_with model: @user, class: "form-horizontal"  do |form| %>

  <div class= "form-group">
    <%= form.label :username, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :username, class: "form-control" %>
      <% if @user.errors[:username].any? %>
      <div class="error_messages">
        <%= @user.errors[:username].join(", ") %>
      </div>
      <% end %>
    </div>
  </div>
<br/>
  <div class= "form-group">
    <%= form.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :email, class: "form-control" %>
      <% if @user.errors[:email].any? %>
      <div class="error_messages">
        <%= @user.errors[:email].join(", ") %>
      </div>
      <% end %>
    </div>
  </div>
<br/>
  <div class="form-group">
    <%= form.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :password, class: "form-control" %>
      <% if @user.errors[:password].any? %>
      <div class="error_messages">
        <%= @user.errors[:password].join(", ") %>
      </div>
      <% end %>
    </div>
  </div>
<br/>
  <div class="form-group">
    <%= form.label :password_confirmation, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :password_confirmation, class: "form-control" %>
      <% if @user.errors[:password_confirmation].any? %>
      <div class="error_messages">
        <%= @user.errors[:password_confirmation].join(", ") %>
      </div>
      <% end %>
    </div>
  </div>
<br/>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
