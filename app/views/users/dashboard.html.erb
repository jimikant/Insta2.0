<br/>
<% if current_user.profile.present? %>
  <h4>Welcome <%= current_user.profile.first_name %></h4>
<% else %>
  <h4>Welcome <%= current_user.username %></h4>
<% end %>
<br/>

<div class="header bg-white" style="display: flex; flex-direction: row; justify-content: flex-start; overflow-x: auto; white-space: nowrap;">
  <% @users.each do |user| %>
    <div class= "username text-start m-4">
      <span class= "text-dark text-decoration-none">
        <% if user&.profile&.avtar&.attached? %>
          <div class="avtar-preview">
            <%= image_tag user.profile.avtar_variant, class: 'avtar useravtar' %>
            <% if user.profile.present? %>
              <span class= "m-2"><strong><%= user.profile.first_name %></strong></span>
            <% else %>
              <span class= "m-2"><strong><%= user.username %></strong></span>
            <% end %>
          </div>
        <% else %>
          <div class="avtar-preview">
            <%= image_tag 'default_avtar.png', class: 'avtar useravtar' %>
            <% if user.profile.present? %>
              <span class= "m-2"><strong><%= user.profile.first_name %></strong></span>
            <% else %>
              <span class= "m-2"><strong><%= user.username %></strong></span>
            <% end %>
          </div>
        <% end %>
      </span>
    </div>
  <% end %>
</div>
<br/>
<hr class="my-4 border-dark" style="border-top: 2px dashed;" />
<br/>

<!-- All Users Posts Section -->
<% @posts.each do |post| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header d-flex align-items-center bg-white">
            <% if post&.user&.profile&.avtar&.attached? %>
              <%= image_tag post.user.profile.avtar_variant, class: 'rounded-circle me-2', size: '40x40' %>
            <% else %>
              <%= image_tag 'default_avtar.png', class: 'rounded-circle me-2', size: '40x40' %>
            <% end %>
            <a href="<%= post_path(post) %>" class="text-dark text-decoration-none">
              <% if post.user.profile.present? %>
                <strong><%= post.user.profile.first_name %></strong>
              <% else %>
                <strong><%= post.user.username %></strong>
              <% end %>
            </a>
          </div>

          <div class="card-body">
            <% if post.image.attached? %>
              <%= image_tag url_for(post.image), class: "img-fluid rounded mb-3", style: "max-height: 300px; object-fit: cover; aspect-ratio: 16 / 9;" %>
            <% end %>
            <p class="card-title"><strong>Title:</strong> <%= post.title %></p>

            <% if post.tags.any? %>
              <p class="card-title">
                <strong>Tags:</strong>
                <% post.tags.each do |tag| %>
                  <span class="badge bg-dark text-light me-1"><%= tag.name %></span>
                <% end %>
              </p>
            <% else %>
              <p class="card-title text-muted"><strong>No Tags available</strong></p>
            <% end %>
          </div>

          <!-- Like Button and Count -->
          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <% if post.likes.where(user: current_user).exists? %>
              <%= form_with(url: destroy_like_path(user_id: current_user.id, id: post.likes.find_by(user: current_user).id), method: :delete, local: true) do |form| %>
                <%= form.button(type: "submit", class: "btn btn-outline-danger") do %>
                  <i class="bi bi-heart-fill text-danger"></i> Unlike
                <% end %>
              <% end %>
            <% else %>
              <%= form_with(url: likes_path(user_id: current_user.id, post_id: post.id), method: :post, local: true) do |form| %>
                <%= form.button(type: "submit", class: "btn btn-outline-danger") do %>
                  <i class="bi bi-heart"></i> Like
                <% end %>
              <% end %>
            <% end %>
            <span class="text-muted"><%= post.likes_count %> likes</span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<br/>
<div class= "pagination justify-content-center">
  <%= paginate @posts %>
</div>
