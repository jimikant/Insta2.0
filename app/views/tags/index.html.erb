<br/>
<h4>Tags</h4>

<%= link_to "New", new_tag_path, class: "btn btn-primary" %> | 
<%= link_to 'Back to Setings', user_settings_path, class: "btn btn-secondary" %>
<br/><br/>

<table class="table table-striped border border-dark">
  <thead>
    <tr>
      <th>Tag_Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @tags.blank? %>
      <tr>
        <td colspan="2" class="tbody text-center"><p>NOTHING TO SHOW HERE</p></td>
      </tr>
    <% end %>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to "Show", tag_path(tag), class: "btn btn-info" %></td>
        <td><%= link_to "Edit", edit_tag_path(tag), class: "btn btn-warning" %></td>
        <td><%= button_to "Delete", destroy_tag_path(tag), method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to Delete this Tag?'}, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  <tbody>
</table>

