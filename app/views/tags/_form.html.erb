<%= form_with model: @tag, url: @tag.new_record? ? tags_path : update_tag_path, class: "container mt-4", local: true do |form| %>

  <div class="mb-3 row">
    <%= form.label :name, class: "col-sm-2 col-form-label", style: "font-weight: bold;" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
      <% if @tag.errors[:name].any? %>
        <div class="text-danger mt-2">
          <%= @tag.errors[:name].join(", ") %>
        </div>
      <% end %>
    </div>
  </div>

  <br/>

  <div class="mb-3 row">
    <div class="col-sm-10 offset-sm-2">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
